    listItems.Add(new SelectListItem
    {
        Text = "เลือกประเภทร้านค้า",
        Value = "type",
        Selected = true
    });
    listItems.Add(new SelectListItem
    {
        Text = "ของหวาน",
        Value = "ของหวาน",
    });
    listItems.Add(new SelectListItem
    {
        Text = "อาหารตามสั่ง",
        Value = "อาหารตามสั่ง"
    });
    listItems.Add(new SelectListItem
    {
        Text = "ก๋วยเตี๋ยว",
        Value = "ก๋วยเตี๋ยว"
    });
    listItems.Add(new SelectListItem
    {
        Text = "เนื้อย่างเกาหลี",
        Value = "เนื้อย่างเกาหลี"
    });
    listItems.Add(new SelectListItem
    {
