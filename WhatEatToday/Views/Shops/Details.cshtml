<section class="book_table_area section_gap">
    <div class="container">
        <div class="book_table_inner row">
            <div class="col-lg-5">
                <div class="table_img">
                    <img src="@Url.Content("~/Content/")img/c4.jpg" style="width:auto; height: 450px " />
                </div>
            </div>
            <div class="col-lg-7">
                <div class="table_form">
                    <h3>Detail Shop</h3>
                    <form class="book_table_form row" action="#">
                            <div class="form-group col-md-12">
                                   ชื่อร้าน @Html.DisplayFor(model => model.name) 
                            </div>
                            <div class="form-group col-md-12">
                                   รายละเอียด @Html.DisplayFor(model => model.details)
                            </div>
                        <div class="form-group col-md-12">
                            ประเภท @Html.DisplayFor(model => model.type)
                        </div>   
                        <div class="form-group col-md-12">
                            <div class="col-md-10">
                                <div id="map">
                                </div>
                            </div>
                        </div>
                        <div class="form-group col-md-12">
                            @Html.DisplayNameFor(model => model.latitude)
                            @Html.DisplayFor(model => model.latitude)
                        </div>
                        <div class="form-group col-md-12">
                            @Html.DisplayNameFor(model => model.longitude)
                            @Html.DisplayFor(model => model.longitude)
                        </div>

                            <p>
                                @Html.ActionLink("Edit", "Edit", new { id = Model.shop_id }) |
                                @Html.ActionLink("Back to List", "Index")
                            </p>

                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
