@model dynamic
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/FoodBarIdex.cshtml";
}

<h2>Index</h2>
    <br />
    <br />
<div class="container">
    <div class="row">
        <div class="col-lg-4">
            @{
                foreach (var m in Model.shop)
                {
                    <div class="row">
                        <div class="col-lg-12">
                            <h1>ร้านอาหาร @m.name</h1>
                        </div>
                    </div>
                    <br />

                        <img src=@Url.Content("~/Content/images/" + (m.pic)) style="width: 40%;border-radius:5%;height: auto" />

                        <br />
                        <a role="button" href="~/CheckIn/Shops/@m.shop_id" class="btn btn-outline-info">เช็คอิน @m.name</a>

                        <div class='starrr'></div>
                        <script>
                            $('.starrr').starrr({
                                change: function (e, value) {
                                    alert('new rating is ' + value)
                                }
                            });

                        </script>

                }
            }
        </div>
        <div class="col-lg-4">

            <div class="container">
                @{
                    foreach (var menu in Model.menu)
                    {
                        <h4>@menu.menu_name</h4>
                    }
                }
            </div>
        </div>
    </div>
    
</div>





