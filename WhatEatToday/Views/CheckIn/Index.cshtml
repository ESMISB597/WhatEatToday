@model dynamic
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/FoodBarIdex.cshtml";
}

<h2>Index</h2>
    <br />
    <br />
<div class="container">
    <div class="row">
        <div class="col-lg-4">
            @{using (Html.BeginForm("Shops", "CheckIn", FormMethod.Post))
                { 
                foreach (var m in Model.shop)
                {
                    <div class="row">
                        <div class="col-lg-12">
                            <h1>ร้านอาหาร @m.name</h1>
                        </div>
                    </div>
                    <br />

                        <img src=@Url.Content("~/Content/images/" + (m.pic)) style="width: 40%;border-radius:5%;height: auto" />

                        <br />
                        <input type="hidden" name="shopid" value="@m.shop_id"/>
                        <input type="submit" name="submit" value="เช็คอินร้านนี้" class="btn btn-outline-info" />

                        <div class='starrr'></div>
                        <script>
                            $('.starrr').starrr({
                                change: function (e, value) {
                                    if (value == null) {
                                        $('#rating').val(0);
                                    } else {
                                        $('#rating').val(value)

                                    }
                                }
                            });

                        </script>
                        <input type="hidden" id="rating" name="rating" value=""/>
                    }
                }
            }
        </div>
        <div class="col-lg-4">

            <div class="container">
                @{
                    foreach (var menu in Model.menu)
                    {
                        <h4>@menu.menu_name</h4>
                    }
                }
            </div>
        </div>
    </div>
    
</div>




