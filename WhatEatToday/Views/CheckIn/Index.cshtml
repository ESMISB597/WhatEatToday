@model dynamic
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/FoodBarIdex.cshtml";
}

<h2>Index</h2>
    <br />
    <br />
    <div class="row">
        <div class="col-lg-6">
            <div class="container">
                @{
                    foreach (var m in Model.shop)
                    {
                        <div class="row">
                            <div class="col-lg-12">
                                <h1>@m.name</h1>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-">
                                <img src=@Url.Content("~/Content/images/" + (m.pic)) style="width: 40%;border-radius:5%;height: auto" />
                            </div>
                        </div>
                        <div class="row">
                        </div>
                        <a role="button" href="~/CheckIn/Shops/@m.shop_id" class="btn btn-outline-info">เช็คอิน @m.name</a>


                    }
                }
            </div>
        </div>
        <div class="col-lg-6">

            <div class="container">
                @{
                    foreach (var menu in Model.menu)
                    {
                        <h4>@menu.menu_name</h4>
                    }
                }
            </div>
        </div>
    </div>


