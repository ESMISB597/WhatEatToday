	width: 500px;
	height: 500px;

	background-image: url('../Content/images/circle.png');
    background-repeat: no-repeat;
	background-position: center;

	/* width and height can be anything, as long as they're equal */
}

-keyframes spin {
	from { transform: rotate(15deg); }
	to { transform: rotate(225deg); }
}

/* Create the animation blocks */
-webkit-keyframes spin {
from { -webkit-transform: rotate(15deg); }
to { -webkit-transform: rotate(225deg); }
}

-moz-keyframes spin {
from { -moz-transform: rotate(15deg); }
to { -moz-transform: rotate(225deg); }
}
   
-ms-keyframes spin {
from { -ms-transform: rotate(15deg); }
to { -ms-transform: rotate(225deg); }
}
                                                                          


