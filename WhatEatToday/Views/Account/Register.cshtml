@model WhatEatToday.Models.RegisterViewModel


@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/FoodBarIdex.cshtml";
}

<!--================ Banner Area =================-->
<section class="banner_area">
    <div class="banner_inner d-flex align-items-center">
        <div class="container">
            <div class="banner_content text-center">
                <h1>Create a new account</h1>
                <div class="page_link">
                    <a href="~/Home/Register">Home</a>
                    <a href="~/Account/Register">Register</a>
                </div>
            </div>
        </div>
        <div class="shape shape1"></div>
        <div class="shape shape2"></div>
        <div class="shape shape3"></div>
        <div class="shape shape4"></div>
        <div class="shape shape5"></div>
        <div class="shape shape6"></div>
        <div class="shape shape7"></div>
    </div>
</section>
<!--================End Banner Area =================-->


<section class="contact_area p_120">
        <div class="container">
            <div class="row">
                <div class="col-lg-9">
                    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                    {

                        @Html.AntiForgeryToken()
                        <div class="col-md-6">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="form-group">
                                <h5>ชื่อผู้ใช้</h5>
                                <input type="text" class="form-control" name="username"/>
                            </div>
                            <div class="form-group">
                                <h5> @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })</h5>
                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                            </div>
                            <div class="form-group">
                                <h5> @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" }) </h5>
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                            </div>
                            <div class="form-group">
                                <h5> @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-6 control-label" }) </h5>
                                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                            </div>
                            <div class="form-group">
                                <h5> อายุของท่าน </h5>
                                <select class="form-control" name="ageSelect">
                                    @for (int i = 1; i <= 100; i++)
                                    {
                                        <option value="@i">@i</option>
                                    }
                                </select>
                            </div>
                            <br />
                                    @Html.DropDownList("UserRoles", (SelectList)ViewBag.Name, null, new { @class = "invisible"})
                            <div class="form-group text-left">
                                <input type="submit" value="Register" class="btn submit_btn" />
                            </div>
                        </div>
                    }




                </div>



            </div>
</section>
<div class="row" style="background-color:#EE7621">
    <div class="col-lg-12" style="color:white" style="background-color:#EE7621">
        <center>
            <br /><br />Copyright &copy;
            <script>document.write(new Date().getFullYear());</script> What Eat Today |
            Webapplication 204359 &nbsp;&nbsp;<i class="fa fa-heart-o" aria-hidden="true"></i> <br /><br /><br />
        </center>
    </div>
</div>
