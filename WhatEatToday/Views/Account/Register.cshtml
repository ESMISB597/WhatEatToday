@model WhatEatToday.Models.RegisterViewModel


@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/FoodBarIdex.cshtml";
}
<br />
<br />

<section class="reservation">
    <div class="container">
        <div class="row">
            <div class="col-lg-12" >
                <div class="main_title position-relative" >
                    <h1 >Create New Account</h1>
                    <hr>
                    <div class="round-planet planet">
                        <div class="round-planet planet2">
                            <div class="shape shape1"></div>
                            <div class="shape shape2"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
                <div class="col-lg-10">
                    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                    {

                        @Html.AntiForgeryToken()
                        <div class="col-md-6">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="form-group">
                                <h5 class="col-md-2 control-label">Username</h5>
                                <input type="text" class="form-control" name="username" />
                            </div>
                            <div class="form-group">
                                <h5> @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })</h5>
                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                            </div>
                            <div class="form-group">
                                <h5> @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" }) </h5>
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                            </div>
                            <div class="form-group">
                                <h5> @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-6 control-label" }) </h5>
                                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                            </div>
                            <div class="form-group">
                                <h5 class="col-md-2 control-label"> Age </h5>
                                <select class="form-control" name="ageSelect">
                                    @for (int i = 1; i <= 100; i++)
                                    {
                                        <option value="@i">@i</option>
                                    }
                                </select>
                            </div>
                            <br />
                            @Html.DropDownList("UserRoles", (SelectList)ViewBag.Name, null, new { @class = "invisible" })
                            <div class="form-group text-left">
                                <input type="submit" value="Register" class="btn submit_btn" />
                            </div>
                        </div>
                    }
            </div>
        </div>
</section>


<div class="row" style="background-color:#EE7621">
    <div class="col-lg-12" style="color:white" style="background-color:#EE7621">
        <center>
